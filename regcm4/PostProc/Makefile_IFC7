#LINUX

FC = ifc -cm -w -w90 -w95  -Vaxlib

LD = $(FC)

FFLAGS = -L../Commons/env/liblinux/ -lnetcdf -I../Commons/env/include

SRC = postproc.f netcdf.f

OBJ = postproc.o netcdf.o

all: postproc

postproc: $(OBJ)
	$(LD) -o $@ $(OBJ) $(FFLAGS)

netcdf.f: ../Commons/env/netcdf.f
	ln -sf ../Commons/env/netcdf.f netcdf.f



clean:
	rm -f *.o postproc
# --------------------------------------------------------------------
# DO NOT DELETE THIS LINE -- make depend depends on it.

postproc.o: postproc.param postproc.f
