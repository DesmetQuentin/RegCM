#  Makefile for RegCM@  run on PC_LINUX by using gfortran 
#  S.Cozzini  10/02/2009
# to be tested 
FC = gfortran -O0 
FFLAGS = -L../../Commons/env/liblinux/ -lnetcdf

LD = $(FC)

SRC = terrain.f

OBJ = terrain.o

all: terrain

.f.o:
	$(FC) -c $(FFLAGS) $*.f

terrain: $(OBJ)
	$(LD) -o $@ $(OBJ) $(FFLAGS)

clean:
	rm -f *.o terrain
# --------------------------------------------------------------------
# DO NOT DELETE THIS LINE -- make depend depends on it.

terrain.o: domain.param terrain.f 
