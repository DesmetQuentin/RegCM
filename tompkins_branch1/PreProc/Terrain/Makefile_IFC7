#Makefile for RegCM@  run on PC_LINUX by using Intel FORTRAN compiler version 7
#Please note you need set big_endian environment for IFC7 by type
##   setenv F_UFMTENDIAN big     
# or put the above one line into your .cshrc file

FC = ifc -tpp7 -g -cm -w -w90 -w95
FFLAGS = -L../../Commons/env/liblinuxold -lnetcdf -Vaxlib

LD = $(FC)

SRC = terrain.f

OBJ = terrain.o

all: terrain

.f.o:
	$(FC) -c $(FFLAGS) $*.f

terrain: $(OBJ)
	$(LD) -o $@ $(OBJ) $(FFLAGS)

clean:
	rm -f *.o terrain
# --------------------------------------------------------------------
# DO NOT DELETE THIS LINE -- make depend depends on it.

terrain.o: domain.param terrain.f 
