#LINUX

FC = ifort -tpp7 -O3 -cm -w -w90 -w95  -Vaxlib -convert big_endian
LD = $(FC) 

SRC = postproc.f netcdf.f

OBJ = postproc.o netcdf.o

all: postproc

postproc: $(OBJ)
	$(LD) -o $@ $(OBJ) -L../Commons/env/liblinux/ -lnetcdf -ludunits -Vaxlib -I../Commons/env/include

netcdf.f: ../Commons/env/netcdf.f
	      ln -sf ../Commons/env/netcdf.f $@

clean:
	rm -f *.o postproc
# --------------------------------------------------------------------
# DO NOT DELETE THIS LINE -- make depend depends on it.

postproc.o: postproc.param postproc.f
