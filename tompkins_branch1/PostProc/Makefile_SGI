#SGI
FC = f77
FFLAGS = -64 -O2 -I../Commons/env/include -L../Commons/env/libsgi/ -lnetcdf

LD = $(FC)

SRC = postproc.f netcdf.f

OBJ = postproc.o netcdf.o

all: postproc

postproc: $(OBJ)
	$(LD) -o $@ $(OBJ) $(FFLAGS)

netcdf.f: ../Commons/env/netcdfSGI.f
	ln -sf ../Commons/env/netcdfSGI.f $@

clean:
	rm -f *.o postproc
# --------------------------------------------------------------------
# DO NOT DELETE THIS LINE -- make depend depends on it.

postproc.o: postproc.param postproc.f 
